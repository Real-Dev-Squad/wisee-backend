{
  /**
    Editor rules
    ------------
  */
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "prettier.tabWidth": 4,
  "prettier.printWidth": 120,
  "editor.rulers": [
    {
      "column": 120
    }
  ],
  /**
    Formatters
    ------------
  */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  /**
    New Lines
    ------------
  */
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
}
